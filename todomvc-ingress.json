{
  "apiVersion": "extensions/v1beta1",
  "kind": "Ingress",
  "metadata": {
    "name": "todomvc-ingress"
  },
  "spec": {
    "backend": {
      "serviceName": "todomvc-service",
      "servicePort": 80
    },
    "rules": [
      {
        "http": {
          "paths": [
            {
              "backend": {
                "serviceName": "todomvc-service",
                "servicePort": 80
              },
              "path": "/todomvc"
            }
          ]
        }
      }
    ]
  }
}